@page
@model RegisterModel

@{
    ViewData["Title"] = "Регистрация";
}

<h1 class="text-2xl font-semibold mb-6">@ViewData["Title"]</h1>

<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
    <h4 class="text-lg font-semibold mb-4">Създаване на нов профил</h4>
    <hr class="mb-6" />

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="text-red-600 font-bold mb-4"></div>

        <!-- Email -->
        <div class="form-group">
            <label asp-for="Input.Email" class="block font-medium text-gray-700">Е-поща</label>
            <input asp-for="Input.Email" class="form-control block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="username" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-red-600 font-bold"></span>
        </div>

        <!-- Password -->
        <div class="form-group">
            <label asp-for="Input.Password" class="block font-medium text-gray-700">Парола</label>
            <input asp-for="Input.Password" type="password" class="form-control block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" placeholder="Парола" />
            <span asp-validation-for="Input.Password" class="text-red-600 font-bold"></span>
        </div>

        <!-- Confirm Password -->
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="block font-medium text-gray-700">Повторете паролата</label>
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" autocomplete="new-password" placeholder="Повторете паролата" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 font-bold"></span>
        </div>

        <!-- Register Button -->
        <div class="form-group">
            <button id="registerSubmit" type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400">
                Регистриране
            </button>
        </div>
    </form>

