<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolAdministrationSystem</title>
    <link rel="stylesheet" href="/css/tailwind-output.css" />
    <script src="~/js/site.js"></script>
</head>
<body class="bg-gray-100 text-gray-900">
    <header>
        <nav class="bg-white shadow-md">
            <div class="container mx-auto px-4 py-4 flex justify-between items-center">
                <!-- Logo -->
                <a href="/" class="text-lg font-bold text-blue-600 hover:text-blue-800">School Administration</a>

                <!-- Navigation Links -->
                <ul class="flex space-x-4">
                    <li><a href="Home/Privacy" class="text-gray-600 hover:text-blue-600">Privacy</a></li>
                    <li><a href="/Absences" class="text-gray-600 hover:text-blue-600">Absences Dashboard</a></li>
                    <li><a href="/Classes" class="text-gray-600 hover:text-blue-600">Classes</a></li>
                    <li><a href="/Students" class="text-gray-600 hover:text-blue-600">Students</a></li>
                    <li><a href="/Teachers" class="text-gray-600 hover:text-blue-600">Teachers</a></li>
                </ul>

                <!-- Login/Register Buttons -->
                <div>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <!-- Show Logout for Authenticated Users -->
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="inline">
                            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <!-- Show Login/Register for Unauthenticated Users -->
                        <a href="@Url.Page("/Account/Login", new { area = "Identity" })" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 mr-2">
                            Login
                        </a>
                        <a href="@Url.Page("/Account/Register", new { area = "Identity" })" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400">
                            Register
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container mx-auto mt-8">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t mt-8 py-4 text-center text-gray-600">
        <div class="container mx-auto">
            &copy; 2024 - SchoolAdministrationSystem - <a href="/Home/Privacy" class="text-blue-600 hover:underline">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
