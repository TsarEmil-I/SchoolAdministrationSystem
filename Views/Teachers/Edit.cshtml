@model TeacherDTO

@{
    ViewData["Title"] = "Редактиране на учител";
}

<h1 class="text-2xl font-semibold mb-6">Редактиране</h1>

<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
    <h4 class="text-lg font-semibold mb-4">Редактиране на учител</h4>
    <hr class="mb-6" />

    <form asp-action="Edit" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 font-bold mb-4"></div>

        <div class="form-group">
            <label asp-for="FirstName" class="block font-medium text-gray-700">Име</label>
            <input asp-for="FirstName" class="form-control block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="FirstName" class="text-red-600 font-bold"></span>
        </div>

        <div class="form-group">
            <label asp-for="MiddleName" class="block font-medium text-gray-700">Презиме</label>
            <input asp-for="MiddleName" class="form-control block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="MiddleName" class="text-red-600 font-bold"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="block font-medium text-gray-700">Фамилия</label>
            <input asp-for="LastName" class="form-control block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="LastName" class="text-red-600 font-bold"></span>
        </div>

        <input type="hidden" asp-for="Id" />

        <div class="form-group flex justify-between">
            <a asp-action="Index" class="px-4 py-2 text-blue-500 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-300">
                Назад
            </a>
            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400">
                Запази
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
