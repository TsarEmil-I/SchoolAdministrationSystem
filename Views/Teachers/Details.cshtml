@model TeacherDTO

@{
    ViewData["Title"] = "Информация за учител";
}

<h1 class="text-2xl font-semibold mb-6">Информация</h1>

<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
    <h4 class="text-lg font-semibold mb-4">Информация за учител</h4>
    <hr class="mb-6" />

    <dl class="space-y-4">
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Име:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.FirstName)</dd>
        </div>
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Презиме:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.MiddleName)</dd>
        </div>
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Фамилия:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.LastName)</dd>
        </div>
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Е-поща:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.Email)</dd>
        </div>
    </dl>

    <div class="mt-6 flex justify-between">
        <a asp-action="Index" class="px-4 py-2 text-blue-500 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-300">
            Назад
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="inline-block bg-yellow-500 hover:bg-yellow-600 text-white py-2 px-6 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400">
            ✎ Редактирай
        </a>
    </div>
</div>
