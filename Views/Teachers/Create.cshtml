@model SchoolAdministrationSystem.Data.Teacher

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-2xl font-semibold mb-6">Create Teacher</h1>

<h4 class="text-lg mb-4">Teacher Details</h4>
<hr class="mb-6" />

<div class="max-w-lg mx-auto">
    <form asp-action="Create" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="form-group">
            <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
            <input asp-for="FirstName" class="form-input w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="FirstName" class="text-red-500"></span>
        </div>

        <div class="form-group">
            <label asp-for="MiddleName" class="block text-sm font-medium text-gray-700 mb-1">Middle Name</label>
            <input asp-for="MiddleName" class="form-input w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="MiddleName" class="text-red-500"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
            <input asp-for="LastName" class="form-input w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="LastName" class="text-red-500"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="w-full px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300" />
        </div>
    </form>
</div>

<div class="mt-6 text-center">
    <a asp-action="Index" class="text-blue-500 hover:underline">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
