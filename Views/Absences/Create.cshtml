@model SchoolAdministrationSystem.Data.Absence

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-3xl font-bold text-gray-900">Create</h1>

<h4 class="text-xl font-medium text-gray-700">Absence</h4>
<hr class="my-4" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

            <!-- Reason -->
            <div class="mb-4">
                <label asp-for="Reason" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Reason" class="form-input mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Reason" class="text-red-500 text-sm"></span>
            </div>

            <!-- Start Date -->
            <div class="mb-4">
                <label asp-for="Start" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Start" class="form-input mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" type="date" />
                <span asp-validation-for="Start" class="text-red-500 text-sm"></span>
            </div>

            <!-- End Date -->
            <div class="mb-4">
                <label asp-for="End" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="End" class="form-input mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" type="date" />
                <span asp-validation-for="End" class="text-red-500 text-sm"></span>
            </div>

            <!-- Class Dropdown -->
            <div class="mb-4">
                <label asp-for="ClassId" class="block text-sm font-medium text-gray-700"></label>
                <select asp-for="ClassId" class="form-select mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="ViewBag.ClassId"></select>
            </div>

            <!-- Student Dropdown -->
            <div class="mb-4">
                <label asp-for="StudentId" class="block text-sm font-medium text-gray-700"></label>
                <select asp-for="StudentId" class="form-select mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="ViewBag.StudentId"></select>
            </div>

            <!-- Submit Button -->
            <div class="mb-4">
                <input type="submit" value="Create" class="bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="text-blue-600 hover:text-blue-800 font-medium">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
