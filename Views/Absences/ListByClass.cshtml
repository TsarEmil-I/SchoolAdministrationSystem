@{
}
@model IEnumerable<AbsenceDTO>

@{
    ViewData["Title"] = "Отсъствия";
}

<h1 class="text-2xl font-semibold mb-6">Заявления на @Model.FirstOrDefault().Class.Speciality клас (справка)</h1>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
        <thead>
            <tr class="bg-gray-100">
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.SequenceNumber)
                </th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.Reason)
                </th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.Start)
                </th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.End)
                </th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.Student)
                </th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.Class)
                </th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-600"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-t border-gray-200">
                    <td class="px-6 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.SequenceNumber)
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.Start)
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.End)
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.Student.FullName)
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.Class.Speciality)
                    </td>
                    <td class="px-5 py-4 text-sm text-gray-600 whitespace-nowrap">
                        <div class="flex flex-wrap gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="inline-flex items-center gap-1 bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1.5 rounded-md text-sm font-medium whitespace-nowrap">
                                ✎ Редактирай
                            </a>

                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="inline-flex items-center gap-1 bg-blue-500 hover:bg-blue-600 text-white px-3 py-1.5 rounded-md text-sm font-medium whitespace-nowrap">
                                ⓘ Информация
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="inline-flex items-center gap-1 bg-red-500 hover:bg-red-600 text-white px-3 py-1.5 rounded-md text-sm font-medium whitespace-nowrap">
                                ✗ Премахни
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
