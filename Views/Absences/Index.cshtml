@model PaginatedListUtil<AbsenceDTO>

@{
    ViewData["Title"] = "Отсъствия";
}

<h1 class="text-2xl font-semibold mb-6">Отсъствия</h1>

<p class="mb-4">
    <a asp-action="Create" class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400">
        ✚ Добави
    </a>
</p>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
        <thead>
            <tr class="bg-gray-100">
                <th class="px-5 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().SequenceNumber)
                </th>
                <th class="px-5 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Reason)
                </th>
                <th class="px-5 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Start)
                </th>
                <th class="px-5 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().End)
                </th>
                <th class="px-5 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Student)
                </th>
                <th class="px-5 py-3 text-left text-sm font-medium text-gray-600">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Class)
                </th>
                <th class="px-5 py-3 text-left text-sm font-medium text-gray-600"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-t border-gray-200">
                    <td class="px-5 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.SequenceNumber)
                    </td>
                    <td class="px-5 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td class="px-5 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.Start)
                    </td>
                    <td class="px-5 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.End)
                    </td>
                    <td class="px-5 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.Student.FullName)
                    </td>
                    <td class="px-5 py-4 text-sm text-gray-600">
                        @Html.DisplayFor(modelItem => item.Class.Speciality)
                    </td>
                    <td class="px-5 py-4 text-sm text-gray-600 whitespace-nowrap">
                        <div class="flex flex-wrap gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="inline-flex items-center gap-1 bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1.5 rounded-md text-sm font-medium whitespace-nowrap">
                                ✎ Редактирай
                            </a>

                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="inline-flex items-center gap-1 bg-blue-500 hover:bg-blue-600 text-white px-3 py-1.5 rounded-md text-sm font-medium whitespace-nowrap">
                                ⓘ Информация
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="inline-flex items-center gap-1 bg-red-500 hover:bg-red-600 text-white px-3 py-1.5 rounded-md text-sm font-medium whitespace-nowrap">
                                ✗ Премахни
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-4 flex justify-between">
    @if (Model.HasPreviousPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-pageSize="15"
           class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">
            Предишна &lt;&lt;&lt;
        </a>
    }

    @if (Model.HasNextPage)
    {
        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-pageSize="15"
           class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">
            Следваща &gt;&gt;&gt;
        </a>
    }
</div>

