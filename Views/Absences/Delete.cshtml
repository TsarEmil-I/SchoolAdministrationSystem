@model SchoolAdministrationSystem.Data.Absence

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-2xl font-semibold mb-6">Delete Absence</h1>

<h3 class="text-lg font-medium text-red-600 mb-4">Are you sure you want to delete this absence?</h3>

<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
    <h4 class="text-lg font-semibold mb-4">Absence Details</h4>
    <hr class="mb-6" />

    <!-- Displaying the Absence Details -->
    <dl class="space-y-4">
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Sequence Number:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.SequenceNumber)</dd>
        </div>
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Reason:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.Reason)</dd>
        </div>
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Start:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.Start)</dd>
        </div>
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">End:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.End)</dd>
        </div>
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Student:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.Student.FirstName) @Html.DisplayFor(model => model.Student.LastName)</dd>
        </div>
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Class:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.Class.Speciality)</dd>
        </div>
    </dl>

    <!-- Delete Confirmation Form -->
    <form asp-action="Delete" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />
        <div class="flex justify-between">
            <!-- Delete Button -->
            <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-300">
                Delete
            </button>
            <!-- Back to List Button -->
            <a asp-action="Index" class="px-4 py-2 text-blue-500 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-300">
                Back to List
            </a>
        </div>
    </form>
</div>
