@model IEnumerable<ClassDTO>

@{
    ViewData["Title"] = "Класове";
}

<h1 class="text-2xl font-semibold mb-6">Класове</h1>

<p class="mb-4">
    <a asp-action="Create" class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400">
        ✚ Създай
    </a>
</p>

<table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
    <thead>
        <tr class="bg-gray-100">
            <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                @Html.DisplayNameFor(model => model.Speciality)
            </th>
            <th class="px-6 py-3 text-left text-sm font-medium text-gray-600">
                @Html.DisplayNameFor(model => model.Teacher.FullName)
            </th>
            <th class="px-6 py-3 text-left text-sm font-medium text-gray-600"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="border-t border-gray-200">
                <td class="px-6 py-4 text-sm text-gray-600">
                    @Html.DisplayFor(modelItem => item.Speciality)
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                    @Html.DisplayFor(modelItem => item.Teacher.FullName)
                </td>
                <td class="px-6 py-4 text-sm text-gray-600 space-x-2">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="bg-yellow-500 hover:bg-yellow-600 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-400">
                        ✎ Редактирай
                    </a> 

                    <a asp-action="Details" asp-route-id="@item.Id" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400">
                        ⓘ Информация
                    </a> 

                    <a asp-action="Delete" asp-route-id="@item.Id" class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-red-400">
                        ✗ Премахни
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
