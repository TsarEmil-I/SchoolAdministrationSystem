@model SchoolAdministrationSystem.Data.Class

@{
    ViewData["Title"] = "Edit Class";
}

<h1 class="text-2xl font-semibold mb-6">Edit Class</h1>

<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
    <h4 class="text-lg font-semibold mb-4">Class Information</h4>
    <hr class="mb-6" />

    <form asp-action="Edit" class="space-y-6">
        <div class="form-group">
            <label asp-for="Speciality" class="block font-medium text-gray-700">Speciality</label>
            <input asp-for="Speciality" class="form-control block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Speciality" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TeacherId" class="block font-medium text-gray-700">Teacher</label>
            <select asp-for="TeacherId" class="form-control block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="ViewBag.TeacherId">
                <option value="">Select Teacher</option>
            </select>
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Id" />

        <div class="form-group flex justify-between">
            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-green-400">
                Save
            </button>
            <a asp-action="Index" class="px-4 py-2 text-blue-500 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-300">
                Back to List
            </a>
        </div>
    </form>
</div>
