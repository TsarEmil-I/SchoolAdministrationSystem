@model ClassDTO

@{
    ViewData["Title"] = "Премахване на клас";
}

<h1 class="text-2xl font-semibold mb-6">Премахване на клас</h1>

<h3 class="text-lg font-medium text-red-600 mb-4">Сигурни ли сте, че желаете да премахнете този клас?</h3>

<div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
    <h4 class="text-lg font-semibold mb-4">Информация за класа</h4>
    <hr class="mb-6" />

    <dl class="space-y-4">
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Клас:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.Speciality)</dd>
        </div>
        <div class="flex items-center">
            <dt class="w-1/3 font-medium text-gray-700">Класен ръководител:</dt>
            <dd class="w-2/3 text-gray-900">@Html.DisplayFor(model => model.Teacher.FullName)</dd>
        </div>
    </dl>

    <form asp-action="Delete" class="space-y-4">
        <input type="hidden" asp-for="Id" />
        <div class="flex justify-between">
            <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-300">
                Премахни ✗
            </button>
            <a asp-action="Index" class="px-4 py-2 text-blue-500 hover:underline focus:outline-none focus:ring-2 focus:ring-blue-300">
                Назад
            </a>
        </div>
    </form>
</div>
