@model SchoolAdministrationSystem.Data.Class

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-2xl font-semibold mb-6">Create Class</h1>

<h4 class="text-lg mb-4">Class Details</h4>
<hr class="mb-6" />

<div class="max-w-lg mx-auto">
    <form asp-action="Create" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <div class="form-group">
            <label asp-for="Speciality" class="block text-sm font-medium text-gray-700 mb-1">Speciality</label>
            <input asp-for="Speciality" class="form-input w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Speciality" class="text-red-500"></span>
        </div>

        <div class="form-group">
            <label asp-for="TeacherId" class="block text-sm font-medium text-gray-700 mb-1">Teacher</label>
            <select asp-for="TeacherId" class="form-input w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="ViewBag.TeacherId">
                <option value="">Select Teacher</option>
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="w-full px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300" />
        </div>
    </form>
</div>

<div class="mt-6 text-center">
    <a asp-action="Index" class="text-blue-500 hover:underline">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
